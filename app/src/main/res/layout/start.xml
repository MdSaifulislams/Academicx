<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".Start">




  <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/show_logo"
     android:layout_width="200dp"
     android:layout_height="200dp"
     android:src="@mipmap/ic_launcher_foreground"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.1" />



  <TextView
     android:id="@+id/AppName"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/_20sdp"
     android:fontFamily="@font/roboto"
     android:text="@string/app_name"
     android:textStyle="bold"
     android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
     android:textColor="@color/teal_200"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/show_logo" />




  <TextView
     android:id="@+id/developer"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/_50sdp"
     android:fontFamily="@font/roboto"
     android:text="Developed BY"
     android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
     android:textColor="@color/deep_white"
     android:textStyle="italic"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/AppName"
 />




  <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/developer_photo"
     android:layout_width="@dimen/_100sdp"
     android:layout_height="@dimen/_100sdp"
     android:layout_marginTop="@dimen/_20sdp"
     android:src="@drawable/saiful"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/developer"
 />

  <TextView
     android:id="@+id/developer_name"
     android:layout_width="wrap_content"
     android:layout_height="30dp"
     android:layout_marginTop="5dp"
     android:fontFamily="@font/roboto"
     android:text="@string/developer_name"
     android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/developer_photo"
     />



  <com.varunest.loader.TheGlowingLoader
     android:id="@+id/progressBar"
     android:layout_width="match_parent"
     android:layout_height="@dimen/_120sdp"
     android:layout_marginHorizontal="@dimen/_20sdp"
     app:theglowingloader_line_1_color="@color/teal_200"
     app:theglowingloader_particle_1_color="@color/yello"
     app:layout_constraintTop_toBottomOf="@id/developer_name"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     />

</androidx.constraintlayout.widget.ConstraintLayout>